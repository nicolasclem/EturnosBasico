@model Login

@{
    Layout = null;
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>   
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eturnos.styles.css" asp-append-version="true" />
<div class="container">
    <h3>Login</h3>
    <hr/>
    <from class="col s12" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">person_pin</i>
                <label asp-for="Usuario"></label>
                <input asp-for="Usuario" type="text"/>
                <span asp-validation-for="Usuario"></span>
            </div>
        </div>
         <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">vpn_key</i>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <span class="red-text">@ViewBag.errorLogin</span>
        <br />
        <div class="row">
            <div class="col s6 m6">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">
                    Login
                    <i class="material-icons right">send</i>
                </button>
            </div>

        </div>

    </from>
</div>
 <script type="text/javascript" src="~/js/materialize.min.js"></script>